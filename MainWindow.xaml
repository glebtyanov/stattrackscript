<Window x:Class="StatTrackScript.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatTrack Script" Height="100" Width="200"
        Closed="MainWindow_OnClosed">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>

        <Button Content="Старт" Width="100" Click="StartButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0"/>
		<Button Content="Тест" Width="100" Click="TestButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="0"/>
		<TextBlock Grid.ColumnSpan="2" Grid.Row="1" Name="IsStarted">Скрипт не запущен</TextBlock>
    </Grid>
</Window>